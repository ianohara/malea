    "version": "0.2.0",
    "configurations": [


        {
            "name": "all_tests w debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.build/tests/all_tests",
            "args": ["--gtest_catch_exceptions=0", "--gtest_filter='*Rastr*'"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "mnist debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.build/mnist_train",
            "args": ["-l", "${workspaceFolder}/.build/data/train-labels.idx1-ubyte", "-i", "${workspaceFolder}/.build/data/train-images.idx3-ubyte", "-c", "1"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "xor debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.build/xor_train",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}